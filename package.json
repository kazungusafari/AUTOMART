{
  "name": "automart",
  "version": "1.0.0",
  "description": "Automart is a marketplace where you can buy and sell cars",
  "main": "index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node ./server/dist/src/app.js",
    "dev": "cross-env NODE_ENV=development nodemon --exec babel-node -- ./server/src/app.js",
    "build": "npm run clean && babel ./server -d ./server/dist",
    "clean": "rm -rf server/dist",
    "lint": "eslint **/*.js --fix",
    "heroku-postbuild": "npm run build",
    "migrate": "babel-node server/src/migrations/migrate.js",
    "seed": "babel-node server/src/seed",
    "drop": "babel-node server/src/migrations/drop",
    "drop:create": "npm-run-all drop migrate",
    "test": "cross-env NODE_ENV=test npm run drop:create && cross-env NODE_ENV=test nyc mocha ./server/test --require babel-register --recursive --timeout 50000 --exit",
    "coverage": "cross-env NODE_ENV=test npm run drop:create && cross-env NODE_ENV=test npm run nyc -- --report lcovonly && cat ./coverage/lcov.info | coveralls",
    "nyc": "nyc --reporter=lcov --reporter=text mocha 'server/test/'  --require babel-core/register --recursive --timeout 50000 --exit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kazungusafari/AUTOMART.git"
  },
  "author": "Kazungu Peter Safari",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kazungusafari/AUTOMART/issues"
  },
  "homepage": "https://github.com/kazungusafari/AUTOMART#readme",
  "dependencies": {
    "babel-core": "^6.26.3",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-register": "^6.26.0",
    "bcrypt": "^3.0.3",
    "body-parser": "^1.18.3",
    "chai-http": "^4.3.0",
    "cloudinary": "^1.13.2",
    "cors": "^2.8.5",
    "cross-env": "^5.2.0",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "express-validator": "^5.3.1",
    "jsonwebtoken": "^8.4.0",
    "lodash": "^4.17.11",
    "make-runnable": "^1.3.6",
    "moment": "^2.24.0",
    "morgan": "^1.9.1",
    "multer": "^1.4.1",
    "multer-storage-cloudinary": "^2.2.1",
    "nodemailer": "^5.1.1",
    "pg": "^7.8.0",
    "redoc": "^2.0.0-rc.8-1",
    "swagger-jsdoc": "^3.2.9",
    "swagger-ui-express": "^4.0.4",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^10.0.1",
    "chai": "^4.2.0",
    "coveralls": "^3.0.3",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-jsx-a11y": "^6.2.0",
    "eslint-plugin-react": "^7.12.4",
    "istanbul": "^0.4.5",
    "mocha": "^5.2.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "^1.18.9",
    "npm-run-all": "^4.1.5",
    "nyc": "^13.3.0",
    "sinon": "^7.2.3",
    "supertest": "^3.4.2"
  }
}
